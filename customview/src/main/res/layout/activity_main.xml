<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:name="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.lgy.customview.widgets.CustomView
        android:id="@+id/cv_tv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:visibility="visible"
        app:textShow="@string/app_name" />


    <com.lgy.customview.widgets.CircleView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"

        android:background="@color/light_green"
        android:padding="20dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_tv"
        name:circle_color="@color/colorAccent" />

</android.support.constraint.ConstraintLayout>